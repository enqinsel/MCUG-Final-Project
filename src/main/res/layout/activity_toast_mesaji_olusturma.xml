<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B23E8"
    tools:context=".ToastMesajiOlusturma">


    app:layout_constraintTop_toBottomOf="@+id/menu"

    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="30dp"
        android:text="Menu ≣"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="3dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Logo Seçiniz"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/anagrup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="İsim Giriniz"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/nametoast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anagrup" />

    <EditText
        android:id="@+id/nametoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:ems="15"
        android:hint="Adınızı Giriniz"
        android:inputType="textPersonName"
        android:maxLength="15"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/toastbuton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
    <!--        app:layout_constraintTop_toBottomOf="@+id/logo1" -->

    <Button
        android:id="@+id/toastbuton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="122dp"
        android:text="Toast Mesajı Oluştur"
        android:textColor="#DFFFFFFF"
        android:textSize="32dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nametoast" />

    <RadioGroup
        android:id="@+id/anagrup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="58dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="37dp"
            android:layout_height="61dp"
            android:text=""
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="112dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="156dp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="56dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/logo1"
            tools:layout_conversion_absoluteHeight="80dp"
            tools:layout_conversion_absoluteWidth="112dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="204dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="34dp"
            android:layout_height="67dp"
            android:text="" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="56dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/logo2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="264dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="56dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/logo3" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:text="" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="56dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/logo4"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="351dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>